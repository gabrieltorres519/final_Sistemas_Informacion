<!DOCTYPE html>
<html lang="en">
<head>
   <title>Editar Producto</title>
   <link rel="stylesheet" href="../public/Liberia/principal.css"> <!-- Ruta relativa al archivo CSS -->
   <style>
      body {
         font-family: Arial, sans-serif;
         margin: 0;
         padding: 20px;
         box-sizing: border-box;
      }

      h1 {
         text-align: center;
         margin-bottom: 20px;
      }

      form {
         max-width: 400px;
         margin: 0 auto;
      }

      .form-group {
         margin-bottom: 20px;
      }

      .form-label {
         color: #000000;
         font-weight: bold;
      }

      .form-control {
         width: 100%;
         padding: 10px;
         font-size: 16px;
         border-radius: 4px;
         border: 1px solid #ccc;
      }

      button {
         display: block;
         width: 100%;
         padding: 10px;
         font-size: 16px;
         font-weight: bold;
         background-color: #007bff;
         color: #fff;
         border: none;
         border-radius: 4px;
         cursor: pointer;
      }

      button:hover {
         background-color: #0056b3;
      }
   </style>
</head>

<body>
   <% include layouts/partials/header.ejs %>

   <h1>Pag edit</h1>

   <form action="/editProduct/<%= specificBook._id %>" method="POST" enctype="multipart/form-data">

    <div class="form-group">
       <label for="titulo" class="form-label">Título del libro</label>
       <input type="text" class="form-control" name="titulo" value="<%= specificBook.titulo %>">
    </div>
 
    <div class="form-group">
       <label for="autor" class="form-label">Autor del libro</label>
       <input type="text" class="form-control" name="autor" value="<%= specificBook.autor %>">
    </div>
 
    <div class="form-group">
       <label for="edicion" class="form-label">Edición del libro</label>
       <input type="text" class="form-control" name="edicion" value="<%= specificBook.edicion %>">
    </div>
 
 
    <div class="form-group">
        <label for="genero" class="form-label">Género/Categoría</label>
        <select name="genero" class="form-control" required>
           <option value="<%= specificBook.genero%>"><%= specificBook.genero%></option>
           <option value="suspenso">Suspenso</option>
           <option value="horror">Horror</option>
           <option value="comedia">Comedia</option>
           <option value="romance">Romance</option>
           <option value="accion">Acción</option>
           <option value="infantil">Infantil</option>
           <option value="noficcion">No ficción</option>
           <!-- Agregar más opciones de proveedores si es necesario -->
        </select>
     </div>
 
    <div class="form-group">
       <label for="precio_venta" class="form-label">Precio Unitario de Venta</label>
       <input type="number" class="form-control" name="precio_venta" step="0.01" value="<%= specificBook.precio_venta %>">
    </div>
 
    <div class="form-group">
       <label for="image" class="form-label">Imagen</label>
       <input type="file" class="form-control" name="image" required>
    </div>
 
    <% if (proveedores && proveedores.length > 0) { %>
        <div class="card-container">
            <div class="form-group">
                <label for="proveedor" class="form-label">Proveedor</label>
                <select name="proveedor" class="form-control" required>
                    <option value="<%= specificBook.titulo %>"><%= specificBook.proveedor %></option>
          <% proveedores.forEach(function(prov) { %>
                    <option value="<%= prov.nombre %>"><%= prov.nombre %></option>
                   <!-- Agregar más opciones de proveedores si es necesario -->
          <% }) %>
                 </select>
           </div>
        </div>
      <% } else { %>
        <p>No se encontraron Proveedores.</p>
      <% } %>
 
    <div class="form-group">
        <label for="precio_compra_unit" class="form-label">Precio Unitario de Compra</label>
        <input type="number" class="form-control" name="precio_compra_unit" step="0.01" value="<%= specificBook.precio_compra_unit %>">
     </div>
  
     <div class="form-group">
        <label for="unidades_compra" class="form-label">Unidades compradas</label>
        <input type="number" class="form-control" name="unidades_compra" value="<%= specificBook.unidades_compra %>">
     </div>

    <button class="btn-submit" style="background-color: #964B00; color: #fff;">Guardar</button>

 
 </form>

   <% include layouts/partials/footer.ejs %>

</body>
</html>
